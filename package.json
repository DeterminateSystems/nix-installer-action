    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.0-alpha.1",
    "prettier": "^3.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.1.6"
  }
}
